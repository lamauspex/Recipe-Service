#
# ======================================================================================
# USER SERVICE - ОСНОВНЫЕ НАСТРОЙКИ
# ======================================================================================
# 
# ============================================
# СЕРВЕР
# ============================================
USER_SERVICE_HOST=0.0.0.0
USER_SERVICE_PORT=8000
USER_SERVICE_ENVIRONMENT=development

# ============================================
# API ДОКУМЕНТАЦИЯ
# ============================================
USER_SERVICE_API_DOCS_ENABLED=true
USER_SERVICE_API_TITLE="User Auth Service"
USER_SERVICE_API_VERSION="1.0.0"
USER_SERVICE_API_DESCRIPTION="API для управления пользователями и аутентификацией"

# ============================================
# АУТЕНТИФИКАЦИЯ И БЕЗОПАСНОСТЬ
# ============================================
USER_SERVICE_SECRET_KEY=your-super-secret-key
USER_SERVICE_ALGORITHM=HS256
# JWT конфигурация
USER_SERVICE_ACCESS_TOKEN_EXPIRE_MINUTES=15
USER_SERVICE_REFRESH_TOKEN_EXPIRE_DAYS=30
USER_SERVICE_VERIFICATION_TOKEN_EXPIRE_HOURS=24
USER_SERVICE_PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
# Безопасность
USER_SERVICE_MAX_LOGIN_ATTEMPTS=5
USER_SERVICE_LOGIN_ATTEMPT_WINDOW_MINUTES=15
USER_SERVICE_ACCOUNT_LOCKOUT_DURATION_MINUTES=30
# Токены
USER_SERVICE_TOKEN_LENGTH=32
USER_SERVICE_JTI_LENGTH=16
# Пароли
USER_SERVICE_MIN_PASSWORD_LENGTH=8
USER_SERVICE_REQUIRE_UPPERCASE=true
USER_SERVICE_REQUIRE_LOWERCASE=true
USER_SERVICE_REQUIRE_DIGITS=true
USER_SERVICE_REQUIRE_SPECIAL_CHARS=true

# ============================================
# RATE LIMITING
# ============================================
USER_SERVICE_RATE_LIMIT_ENABLED=true
USER_SERVICE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
USER_SERVICE_RATE_LIMIT_REQUESTS_PER_HOUR=1000
USER_SERVICE_RATE_LIMIT_BLOCK_DURATION=30
USER_SERVICE_RATE_LIMIT_WINDOW_SECONDS = 60
USER_SERVICE_RATE_LIMIT_BURST_SIZE=10

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
USER_SERVICE_LOG_LEVEL=INFO
USER_SERVICE_LOG_FORMAT=json
USER_SERVICE_STRUCTURED_LOGGING=true
USER_SERVICE_ENABLE_REQUEST_LOGGING=True
USER_SERVICE_ENABLE_EXCEPTION_LOGGING=True
USER_SERVICE_ENABLE_BUSINESS_LOGGING=True

# ============================================
# МОНИТОРИНГ
# ============================================
USER_SERVICE_MONITORING_ENABLED=true
USER_SERVICE_METRICS_PORT=9090
USER_SERVICE_HEALTH_CHECK_PATH=/health
USER_SERVICE_PROMETHEUS_METRICS_PATH=/metrics

# ============================================
# CORS НАСТРОЙКИ
# ============================================
USER_SERVICE_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
USER_SERVICE_CORS_ALLOW_CREDENTIALS=true
USER_SERVICE_CORS_MAX_AGE=86400

# ============================================
# REDIS (КЭШИРОВАНИЕ)
# ============================================
USER_SERVICE_REDIS_HOST=localhost
USER_SERVICE_REDIS_PORT=6379
USER_SERVICE_REDIS_DB=0
USER_SERVICE_REDIS_PASSWORD=
USER_SERVICE_CACHE_TTL=3600
USER_SERVICE_CACHE_ENABLED=true

# ============================================
# RABBITMQ MESSAGE BROKER
# ============================================
USER_SERVICE_RABBITMQ_USER=admin
USER_SERVICE_RABBITMQ_PASSWORD=rabbitmq-password
USER_SERVICE_RABBITMQ_VHOST=/
USER_SERVICE_RABBITMQ_URL=amqp://admin:rabbitmq-password@localhost:5672/

# ============================================
# BACKGROUND TASKS
# ============================================
USER_SERVICE_CELERY_BROKER_URL=amqp://admin:rabbitmq-password@localhost:5672/
USER_SERVICE_CELERY_RESULT_BACKEND=redis://localhost:6379/1